{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "lib": ["ES2021", "DOM"],
      "allowJs": false,
      "strict": true,
      "declaration": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "include": ["src"],
    "exclude": ["dist", "**/*.test.ts"]
  }